{
  // https://nuxt.com/docs/guide/concepts/typescript
  "target": "ES2018",
  "module": "ESNext",
  "moduleResolution": "Node",
  "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
  "esModuleInterop": true,
  "allowJs": true,
  "sourceMap": true,
  "strict": true,
  "noEmit": true,
  "experimentalDecorators": true,
  "baseUrl": "./src",
  "types": [
    "@nuxt/types",
    "@types/node",
    "vite/client"
  ],
  "paths": {
    "~/*": ["./*"],
    "@/*": ["./*"]
  },
  "resolveJsonModule": true,
  "extends": "./.nuxt/tsconfig.json",
  "include": [
    "./src/*.ts",
    "./src/*.vue",
    "./src/*.ext"
  ]
}
